pipeline {
    agent any
    environment {
        AWS_ACCESS_KEY_ID     = credentials('aws-access-key')
        AWS_SECRET_ACCESS_KEY = credentials('aws-secret-key')
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'pradeep/gen1', url: 'https://github.com/Pradeep-VJ/astra-test-code.git'
            }
        }
        stage('Terraform Init & Apply') {
            steps {
                sh 'cd terraform && terraform init && terraform apply -auto-approve'
            }
        }
        stage('Build Lambda') {
            steps {
                sh 'cd lambda && sh build_lambda.sh'
            }
        }
        stage('Deploy Lambda') {
            steps {
                sh 'cd lambda && sh deploy_lambda.sh'
            }
        }
    }
}

